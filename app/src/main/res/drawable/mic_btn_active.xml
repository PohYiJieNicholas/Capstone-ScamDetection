<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="40dp"
        android:height="40dp">
        <shape>
            <solid android:color="#FFBB86FC"/> <!-- Change to desired color -->
            <corners android:radius="500dp"/> <!-- Rounded corners -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="center"
        android:drawable="@drawable/baseline_mic_24_white">
    </item>
</layer-list>